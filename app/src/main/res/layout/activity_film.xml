<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FilmActivity">

    <TextView
        android:id="@+id/title_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="24sp"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:text="Nazwa" />

    <ImageView
        android:id="@+id/image_field"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_photo"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/country_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:text="USA" />

    <TextView
        android:id="@+id/year_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:text="2008" />

    <TextView
        android:id="@+id/runtime_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:text="155 min" />

    <TextView
        android:id="@+id/director_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:text="Marek" />

    <TextView
        android:id="@+id/rating_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:text="5.5" />

</LinearLayout>